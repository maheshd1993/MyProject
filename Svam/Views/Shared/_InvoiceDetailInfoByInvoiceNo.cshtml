@model Svam.Models.ViewInvoiceModel

<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-body qtmodal" id="div_print">
            <div class="custmodal">
                <div class="headleft">
                    <img src="/img/logo.png">
                </div>
                <div class="headright">
                    <h1>SVAM Power  Sector - 18 (Gurugram)</h1>
                </div>
            </div>
            <!-- print data -->
            <div class="qt_left">
                <label class="qtlabel">Customer Name :- <span>@Model.CustomerName</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Quotation No :- <span>@Model.QuotationNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Invoice No :- <span>@Model.InvoiceNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Invoice Date :- <span>@Model.InvoiceDate</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Challan No :- <span>@Model.ChallanNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Conatct Person :- <span>@Model.ContactPerson</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Conatct No :- <span>@Model.ConatctNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Email :- <span>@Model.Email</span></label>
            </div>

            <div class="qt_left">
                <label class="qtlabel">Billing Address :- <span>@Model.BillingAddress</span></label>
            </div>

            <div class="qt_left">
                <label class="qtlabel">Shipping Address :- <span>@Model.ShippingAddess</span></label>
            </div>

            <div class="qt_left">
                <label class="qtlabel">Source Branch :- <span>@Model.BrachName (@Model.BranchAddress)</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Branch Tin No :- <span>@Model.BranchTinNo</span></label>
            </div>

           
            <h2 style="border-bottom: 2px solid #333; font-size: 20px; margin-bottom: 10px; line-height: 30px;">Item Details</h2>

            <table class="table table-striped table-hover printtable table-bordered">
                <thead>
                    <tr>
                        <th width="2%">Sr.No </th>
                        <th width="10%">Part No. </th>
                        <th width="30%">Description</th>
                         <th width="10%">Unit</th>
                        <th width="10%">Qty</th>
                        <th width="10%">Rate</th>
                        <th width="10%">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 1;}
                    @foreach (var item in Model.viewInvoiceItemDetailModelList.ToList())
                    {
                    
                        <tr>
                            <td>@i</td>
                            <td>@item.PartNo </td>
                            <td>
                                <p>@item.ItemName</p>
                            </td>
                            <td>@item.UnitName</td>
                            <td>@item.Qty</td>
                            <td>@item.Rate</td>
                            <td>@item.Amount</td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>

            <div class="totalwrap">
                <table class="table table-striped totaltable table-bordered">
                    <tbody>
                        <tr>
                            <th width="40%">Sub Total</th>
                            <th width="20%">%</th>
                            <th width="20%">Amount</th>
                        </tr>
                        <tr>
                            <td>Discount</td>
                            <td>@Model.ItmDiscountPer</td>
                            <td>@Model.ItmDiscountAmt</td>
                        </tr>

                        <tr>
                            <td>Handling</td>
                            <td>@Model.ItmHandlingChargePercentage</td>
                            <td>@Model.ItmHandlingChargeAmt</td>
                        </tr>

                        <tr>
                            <td>Freight</td>
                            <td>@Model.ItmFreightPercentage</td>
                            <td>@Model.ItmFreightChargeAmt</td>
                        </tr>
                        <tr>
                            <td>@Model.ItmTaxGroupName</td>
                            <td></td>
                            <td>@Model.ItmTaxGroupAmt</td>
                        </tr>
                        <tr>
                            <td>Total Amount</td>
                            <td></td>
                            <td>@Model.ItmTotalTaxAmt
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>


          
        </div>

        
        <br style="clear: both;">
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
