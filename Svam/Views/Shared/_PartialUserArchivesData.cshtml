@model Traders.Models.ViewArchivesModel


        @if(Model.viewarchivesList.Count()>0)
        {
         
                <table class="table table-striped table table-hover tabledata table-bordered">
						      <thead>
							    <tr>
							      <th>Lead Name </th>
							      <th>Follow Up date</th>
							      <th>Product Number</th>
							      <th>Lots Size</th>
							      <th>Invt Size</th>
							      <th>Lead Status</th>							  
							    </tr>
						      </thead>
						      <tbody>
                                 @foreach (var item in Model.viewarchivesList)
                                 {
                                     var splitedate = item.ProductName.Split(',');
							         <tr>
							          <td>@item.LeadOwner</td>
							          <td>@item.FollowupDate</td>
							          <td><a href="#" class="Pop" data-toggle="modal" style="font-size:14px;" data-target="#modalDoses" data-name="@item.ProductName">@splitedate.Count()</a></td>
							          <td>@item.LotsSize</td>
							          <td>@item.InvtSize</td>
							          <td>@item.LeadStatus</td>					  
							        </tr>
                                 
                                 }
						      </tbody>
						    </table>
        }
        else
        {
           <p style="text-align: center;font-size: 25px;color: brown;">No record found.</p>	 
        }

	<script>
	  
	    $('.Pop').on('click', function () {
	        var frmList = $(this).data('name');
	        $.post('/common/ProductNameListDisplay', { firmList: frmList }, function (data) {
	            jQuery('#modalDoses').html(data);
	            $($(this).data("#modalDoses")).show();
	        });
	    });
	</script>	



