@model Svam.Models.ViewServiceInvoiceModel

<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-body qtmodal" id="div_print">
            <div class="custmodal">
                <div class="headleft">
                    <img src="/img/logo.png">
                </div>
                <div class="headright">
                    <h1>SVAM Power  Sector - 18 (Gurugram)</h1>
                </div>
            </div>
            <!-- print data -->
            <div class="qt_left">
                <label class="qtlabel">Customer Name :- <span>@Model.CustomerName</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Quotation No :- <span>@Model.QuotationNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Invoice No :- <span>@Model.ServiceInvoiceNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Invoice Date :- <span>@Model.ServiceInvoiceDate</span></label>
            </div>
           
          
            <div class="qt_left">
                <label class="qtlabel">Conatct No :- <span>@Model.ConatctNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Email :- <span>@Model.Email</span></label>
            </div>

            <div class="qt_left">
                <label class="qtlabel">Billing Address :- <span>@Model.BillingAddress</span></label>
            </div>

            <div class="qt_left">
                <label class="qtlabel">Shipping Address :- <span>@Model.ShippingAddess</span></label>
            </div>
            @if (@Model.StartDate != null && @Model.StartDate!="")
            {
            <div class="qt_left">
                <label class="qtlabel">Start Date :- <span>@Model.StartDate</span></label>
            </div>
            }
            @if (@Model.EndDate != null && @Model.EndDate != "")
            {
            <div class="qt_left">
                <label class="qtlabel">End Date :- <span>@Model.EndDate</span></label>
            </div>
            }
            <div class="qt_left">
                <label class="qtlabel">Source Branch :- <span>@Model.BrachName (@Model.BranchAddress)</span></label>
            </div>
             <div class="qt_left">
                <label class="qtlabel">Order Po No :- <span>@Model.OrderPONo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel">Order No :- <span>@Model.OrderNo</span></label>
            </div>
            <div class="qt_left">
                <label class="qtlabel"><span></span></label>
            </div>

            <br style="clear:both;" />
           
            <h2 style="border-bottom: 2px solid #333; font-size: 20px; margin-bottom: 10px; line-height: 30px;">Item Details</h2>

            <table class="table table-striped table-hover printtable table-bordered">
                <thead>
                    <tr>
                        <th width="2%">Sr.No </th>
                        <th width="10%">Part No. </th>
                        <th width="30%">Description</th>
                        <th width="10%">Qty</th>
                        <th width="10%">Rate</th>
                        <th width="10%">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 1;}
                    @foreach (var item in Model.viewServiceInvoiceItemDetailModelList.ToList())
                    {
                    
                        <tr>
                            <td>@i</td>
                            <td>@item.ServicePartNo </td>
                            <td>
                                <p>@item.ServiceName</p>
                            </td>
                            <td>@item.Qty</td>
                            <td>@item.Rate</td>
                            <td>@item.Amount</td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>

            <div class="totalwrap">
                <table class="table table-striped totaltable table-bordered">
                    <tbody>
                        <tr>
                            <th width="40%">Sub Total</th>
                            <th width="20%">%</th>
                            <th width="20%">Amount</th>
                        </tr>
                        <tr>
                            <td>Discount</td>
                            <td>@Model.SDDiscountPer</td>
                            <td>@Model.SDDiscountAmt</td>
                        </tr>

                        
                        <tr>
                            <td>@Model.SDTaxGroupName</td>
                            <td></td>
                            <td>@Model.SDTaxGroupAmt</td>
                        </tr>
                        <tr>
                            <td>Total Amount</td>
                            <td></td>
                            <td>@Model.SubTotalAmount
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>


          
        </div>

        
        <br style="clear: both;">
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
