@model Traders.Models.ViewLeadsModel

@if (Model.viewleadsList.Count > 0)
{ 
    <table class="table table-striped table table-hover tabledata table-bordered">

        <thead>
            <tr>
                <th>Sr.No</th>
                <th>Customer Name </th>
                <th>Mobile No</th>
                <th>Followup Date</th>
                <th>Lead Status</th>
            </tr>
        </thead>

        <tbody>
            @{int i = 1;}
            @foreach (var item in Model.viewleadsList)
            {
                                 
	<tr>
        <td translate="no">@i</td>
        <td translate="no"><a href="/home/createleads/@item.Id">@item.LeadName</a></td>
        <td translate="no"><a href="/home/createleads/@item.Id">@item.Mob</a></td>
        <td translate="no">@item.FollowupDate</td>
        <td translate="no">@item.LeadStatus</td>
    </tr>
                i++;
            }

        </tbody>
    </table>
            using (Html.BeginForm("ExportMappeduserSalesLeads", "home", FormMethod.Post))
            {
                TempData["MappedUser-Leads"] = Model.viewleadsList.ToList();
    <div class="row" style="margin-top: 10px;">
        <div class="col-md-2 col-sm-2 col-xs-12 col-md-offset-10">
            <input id="Submit1" type="submit" class="btn btn-default" style="width: 100%;" value="Export to Excel">
        </div>
    </div>
            }

}
else
{
              
    <p>No data found!.</p>
             
}
<script type="text/javascript">
    $('.Pop').on('click', function () {
        var frmList = $(this).data('name');
        $.post('/common/ProductNameListDisplay', { firmList: frmList }, function (data) {
            jQuery('#modalDoses').html(data);
            $($(this).data("#modalDoses")).show();
        });
    });
</script>
