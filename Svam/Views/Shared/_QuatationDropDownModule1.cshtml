                                        }
                                        else
                                        {
                                            @Html.DropDownListFor(em => em.ID, Enumerable.Empty<SelectListItem>(), new { @class = "form-control ListItemCapitalize", required = "required", translate = "no" })
                                        }
                                        @Html.ValidationMessageFor(em => em.ID)
                                    </div>
                                    <input type="hidden" id="Id" value="0" />
                                </div>
                            </div>
                        
                            
                       
