@model Svam.Models.ViewLeadsModel

@if (Model.viewleadsList.Count > 0)
{
    <table id="dest" class="table table-striped table table-hover tabledata table-bordered">
        <thead>
            <tr>
                <th width="4%" class="noimg padd0" style="padding: 10px 0px;">Sr no.</th>
                <th width="12%">Customer Name </th>
                <th width="7%">Mob.No.</th>
                <th width="12%">Customer Email</th>
                <th width="10%">Designation</th>
                <th width="8%">Country</th>
                <th width="10%">Follow Up date</th>
                <th width="7%">Status</th>
                <th width="10%">Created By</th>
                <th width="10%" class="noimg">Action</th>

            </tr>
        </thead>
        <tbody>


            @{int i = 1;}
            @foreach (var item in Model.viewleadsList.OrderByDescending(em => em.FollowupDate))
            {
                <tr>
                    <td>@i</td>
                    <td>@item.LeadName</td>
                    <td>@item.Mob</td>
                    <td>@item.EMail</td>
                    <td>@item.Designation</td>
                    <td>@item.Country</td>
                    <td>@item.FollowupDate</td>
                    <td>@item.LeadStatus</td>
                    <td>@item.Created_By</td>
                    <td>
                        <a href="#" class="viewbtn viewleadsinfo" data-id="@item.Id" data-toggle="modal" data-target="#leaddetails">Details</a>
                        <a href="/home/createleads/@item.Id" class="editbtn">Update</a>
                    </td>
                </tr>
                i++;
            }


        </tbody>
    </table>
}
else
{
    <p>No recods founds.</p>
}