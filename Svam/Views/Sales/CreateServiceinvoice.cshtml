            });
            var DiscountAmt = parseFloat(jQuery('#SDDiscountAmt').val());
            var totalItmAmt = parseFloat(calculateItemQty('itmcalamt'));
            var FinalAmount = totalItmAmt + sum - DiscountAmt;
            jQuery('#SDTotalTaxAmt').val(FinalAmount.toFixed(2));


            //return sum;
        }


