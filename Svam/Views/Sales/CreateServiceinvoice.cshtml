                $("#Email").val(arr[1]);
                $('#ConatctNo').val(arr[2]);
                if (arr[0] != '') {
                    BindQuotationDDL(arr[0]);
                    BindBillingDDL(arr[0]);
                    BindShippingDDL(arr[0]);
                }

                return false;
            }
        });

