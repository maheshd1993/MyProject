@{
    ViewBag.Title = "OurMappeduser";
    Layout = "~/Views/Shared/_LayoutSiteMaster.cshtml";
}
@model Traders.Models.MappedUserModel
<div class="maincontainer">
    @using (Html.BeginForm("OurMappeduser", "home", FormMethod.Post))
    {
        <div class="col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading"><strong>Manage Mapped User</strong> </div>
                <div class="panel-body">
                    <table class="table table-bordered tablefont">
                        <thead class="black-white-text">
                            <tr>
                                <th>#</th>
                                <th>User Name</th>
                                <th>Email ID</th>
                                <th>View Report</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @if (Model.mappeduserList != null && Model.mappeduserList.Count > 0)
                            {

                                foreach (var item in Model.mappeduserList.OrderBy(em => em.EMpName).ToList())
                                {

                                    <tr>
                                        <td translate="no" data-column="Sr.No.">@i</td>
                                        <td translate="no" data-column="User Name">@item.EMpName</td>
                                        <td translate="no" data-column="Email ID">@item.Email</td>
                                        @if (item.Profile.ToLower().Contains("developer") || item.Profile.ToLower().Contains("tester") || item.Profile.ToLower().Contains("qa") || item.Profile.ToLower().Contains("seo"))
                                        {
                                            <td data-column="View Report"><a href="/home/OurMappeduserDeveloper/@item.MapUserId">View Report</a></td>
                                        }
                                        else
                                        {
                                            <td data-column="View Report"><a href="/home/OurMappeduserSales/@item.MapUserId">View Report</a></td>
                                        }

                                    </tr>
                                    i++;

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" style="text-align: center;">** No Record Found</td>
                                </tr>

                            }
                        </tbody>
                </div>
            </div>
        </div>



    }

</div>

<script type="text/javascript">


</script>
