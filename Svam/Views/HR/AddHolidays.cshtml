@{
    ViewBag.Title = "Add Modify Manual Attendance";
    Layout = "~/Views/Shared/_LayoutSiteMaster.cshtml";

    var al = TempData["success"];
    var alchk = TempData["alert"];
}
@model Traders.Models.HolidaysModel

<div class="maincontainer">
    <div class="col-sm-12">
        @using (Html.BeginForm("AddHolidays", "HR", FormMethod.Post))
        {
            @Html.HiddenFor(em => em.ID)
            <div class="panel panel-info new_activity_form">
                <div class="panel-heading">
                    <strong>Create Holidays List</strong>
                    <div class="row" style="padding-right: 2.5%;">
                        <div class="col-sm-9 padd0"></div>
                        <div class="col-sm-3 padd0 developer_paddo">
                            <input type="button" value="Go Back" class="btn btn-danger  pull-right" style="margin-right: 5px;margin-top:3px;" onclick="location.href = '/HR/AddHolidays'" />
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Name</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(em => em.Name, htmlAttributes: new { @class = "form-control floatIntOnly", @autocomplete = "off"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Date</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(em => em.Date, htmlAttributes: new { @class = "form-control", @placeholder = "Select Date", @autocomplete = "off", @readonly = "@readonly" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <input type="submit" name="Submit" value="Save" class="btn btn-success btnSave " id="btnSaveMain" style="margin-left: 450px;">
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="/js/jquery-1.11.3.min.js"></script>

<link href="/timepicker/bootstrap-timepicker.min.css" rel="stylesheet">
<script src="/timepicker/bootstrap-timepicker.js"></script>

<link href="/Scripts/SweetAlert/sweetalert.css" rel="stylesheet" />
<script src="/Scripts/SweetAlert/sweetalert.min.js"></script>




<script>
    var mas = '@al';
    var chkmsg = '@alchk';
    if (mas != '') {
        swal("Success !", mas, "success");
    }
    if (chkmsg != '') {
        swal("Alert !", chkmsg, "warning");
    }
    $('#Date').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy',

    });
</script>
<script type="text/javascript">

        $(function () {
            $('#Date').datepicker({
                autoclose: true,
                format: 'dd-mm-yyyy',
               
            });
        });

    
</script>
