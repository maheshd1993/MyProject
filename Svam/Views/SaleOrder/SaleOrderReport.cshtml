    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@
<script src="~/Scripts/SweetAlert/sweetalert.min.js"></script>
<script src="~/timepicker/bootstrap-timepicker.js"></script>
<script>
    var dateFormat = '@Session["DpDateFormat"]';
    $(function () {
        $('#FromDate').datepicker({
            autoclose: true,
            format: dateFormat,
            validateOnBlur: false,
            forceParse: true,
            assumeNearbyYear: 20
        });

        $('#ToDate').datepicker({
            autoclose: true,
            format: dateFormat,
            validateOnBlur: false,
            forceParse: true,
            assumeNearbyYear: 20
        });
    });
</script>

<script>
    function getQuatationDetail(obj) {
        var bilNo = $(obj).attr('billNo');

            $.ajax({
                type: "GET",
                url: '@Url.Action("SaleOrderInvoice", "SaleOrder")',
                data: { BillNo: bilNo },
                error: function (xhr, status, error) {
                    //$(".loaderimg").hide();
                    swal("Alert !", "Something went wrong!", "warning");
                },
                success: function (JSONdata) {
                    jQuery('#ViewQuotationDetail').html(JSONdata);
                    $($(this).data("#ViewQuotationDetail")).show();
                },
                //beforeSend: function () {
                //    if (QtNo != 0)
                //        $('.loaderimg').show();

                //    else
                //        return false;
                //},
                //complete: function () {
                //    $(".loaderimg").hide();
                //}
            });
    }
</script>

