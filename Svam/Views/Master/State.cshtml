@{
    ViewBag.Title = "State";
    Layout = "~/Views/Shared/_LayoutSiteMaster.cshtml";
}
@model Svam.Models.StateModel
<script src="/Scripts/SweetAlert/sweetalert.min.js"></script>
<link href="/Scripts/SweetAlert/sweetalert.css" rel="stylesheet" />
@{
    var al = TempData["success"];
    var alchk = TempData["alert"];
}
<script>

    var mas = '@al';
    var chkmsg = '@alchk';
    if (mas != '') {
        swal({ title: "Thank you!", text: mas, imageUrl: "/Scripts/SweetAlert/thumbs-up.jpg" });
    }
    if (chkmsg != '') {
        alert(chkmsg);
    }
</script>


<div class="maincontainer">
    <div class="col-sm-12 ">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-th-list" aria-hidden="true"></i>Manage State <span class="title2">( @TempData["CountryName"] )</span> </div>
                <div class="panel-body">

                    @using(Html.BeginForm("State","Master",FormMethod.Post))
                      {
                        <div class="form-group f-center col-sm-6 padd0">
                            <div class="col-sm-8">
                                  @Html.TextBoxFor(em => em.Statename, new {@placeholder="Add State",@class="form-control" })
                                    @Html.ValidationMessageFor(em=>em.Statename)
                                    @Html.HiddenFor(em=>em.StateId)
                            </div>

                            <div class="col-sm-4">
                                <input type="submit" value="Submit" class="btn mainbtn">
                            </div>
                        </div>
                    }
                    <div class="devider"></div>

                    <div class="col-sm-12 padd0">
                        <div class="table-responsive">
                            <table class="table table-striped table table-hover tabledata table-bordered">
                                <thead>
                                    <tr>
                                        <th width="5%" class="noimg padd0" style="padding: 10px 0px; !important;">Sr no.</th>
                                        <th width="60%">State Name </th>
                                        <th width="20%">Add State</th>
                                        <th width="12%">Status</th>
                                        <th width="15%" class="noimg">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 1;}
                                    @foreach (var item in ViewBag.StateList)
                                    {
                                      <tr>
                                        <td>@i</td>
                                        <td>@item.StateName</td>
                                        <td><a href="/Master/City/@item.Id"><i class="fa fa-plus" aria-hidden="true"></i>Add City</a></td>
                                        <td>@item.Status</td>
                                        <td><a href="/Master/State/@item.CountryId/@item.Id" class="viewbtn">Edit</a></td>
                                      </tr>
                                        i++;
                                    }
                                   
                                </tbody>
                            </table>

                            <div class="container paginationcustom">
                                <ul class="pagination"></ul>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>